@model List<CARPARK.DTO.EntitisDTO.PersonelUyeDTO>

@{
    ViewBag.Title = "Subscribers";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<link rel="stylesheet" href="~/Content/Dashboard/css/uniform.css" />
<link rel="stylesheet" href="~/Content/Dashboard/css/select2.css" />
<style>
    #perEkle:hover {
        color: darkblue;
    }

    #perEkle h5:hover {
        color: darkblue;
        text-decoration: underline;
    }

    .container-fluid .row-fluid:first-child {
        margin-top: 0;
    }

    #sub {
        margin-bottom: 0;
    }
</style>
<div id="content-header">
    <div id="breadcrumb"> <a href="/Dashboard" title="Anasayfaya Geri Dön" class="tip-bottom"><i class="icon-home"></i> Anasayfa</a> <a href="#" class="current"><i class="icon-user"></i>Personeller</a> </div>
</div>

<div class="container-fluid">
    <hr id="sub">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <div class="pull-left">
                        <span class="icon"><i class="icon-th"></i></span>
                        <h5>Personel Tablosu</h5>
                    </div>
                    <a href="/AddSubscriber" class="pull-right" id="perEkle">
                        <span class="icon"><i class="icon-plus"></i></span>
                        <h5>Personel Ekle</h5>
                    </a>
                </div>
                <div class="widget-content nopadding">
                    <table class="table table-bordered data-table">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>Telefon</th>
                                <th>Adres</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var per in Model)
                            {
                            <tr class="gradeX">
                                <td style="text-align:center;">@per.Ad @per.Soyad</td>
                                <td style="text-align:center;">@per.Telefon</td>
                                <td style="text-align:center;">@per.Adres</td>
                                <td class="taskOptions" style="">
                                    <a href="#" class="tip-top btn-large" data-original-title="Detay"><i class="icon-user"></i></a>
                                    <a href="UpdateSubscriber/@per.PersonelID" class="tip-top btn-large" data-original-title="Düzenle"><i class="icon-pencil"></i></a>
                                    <a href="#" class="tip-top btn-large" data-original-title="Sil"><i class="icon-remove"></i></a>
                                </td>
                            </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/Dashboard/js/jquery.min.js"></script>
<script src="~/Content/Dashboard/js/matrix.tables.js"></script>

