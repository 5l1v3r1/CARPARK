@model CARPARK.DTO.EntitisModelViewDTO.PersonelViewModel
@{
    ViewBag.Title = "UpdateSubscriber";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<style>
    .container-fluid .row-fluid:first-child {
        margin-top: 0;
    }

    #sub {
        margin-bottom: 0;
    }
</style>
<link rel="stylesheet" href="~/Content/Dashboard/css/colorpicker.css" />
<link rel="stylesheet" href="~/Content/Dashboard/css/datepicker.css" />
<link rel="stylesheet" href="~/Content/Dashboard/css/uniform.css" />
<link rel="stylesheet" href="~/Content/Dashboard/css/select2.css" />
<link rel="stylesheet" href="~/Content/Dashboard/css/bootstrap-wysihtml5.css" />
<div id="content-header">
    <div id="breadcrumb">
        <a href="/Dashboard" title="Anasayfaya Geri Dön" class="tip-bottom"><i class="icon-home"></i> Anasayfa</a>
        <a href="/Subscribers" title="Personel Sayfasına Geri Dön" class="tip-bottom"><i class="icon-user"></i> Personeller</a>
        <a href="#" class="current">Personel Düzenle</a>
    </div>
</div>

<div class="container-fluid">
    <hr id="sub">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-align-justify"></i> </span>
                    <h5>Personel Düzenle</h5>
                </div>
                <div class="widget-content nopadding">
                    <form action="/Dashboard/UpdateSubscriber" method="post" class="form-horizontal" role="form">
                        @Html.Hidden("PersonelID", Model.Personel.PersonelID)
                        @Html.Hidden("UyeID", Model.Uye.UyeID)
                        @Html.Hidden("Durum", Model.Personel.Durum)
                        @Html.Hidden("YetkiID", Model.Personel.YetkiID)
                        <div class="control-group">
                            <label class="control-label">İsim :</label>
                            <div class="controls">
                                <input value="@Model.Personel.Ad" name="Ad" type="text" class="span4" placeholder="İsim Giriniz..." />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Soyadı :</label>
                            <div class="controls">
                                <input value="@Model.Personel.Soyad" name="Soyad" type="text" class="span4" placeholder="Soyadı Giriniz..." />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">TC Kimlik :</label>
                            <div class="controls">
                                <input value="@Model.Personel.TCNo" name="TCNo" type="text" class="span4" placeholder="TC Kimlik Giriniz..." />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Telefon :</label>
                            <div class="controls">
                                <input value="@Model.Personel.Telefon" name="Telefon" type="text" class="span4" placeholder="Telefon Numarası Giriniz..." />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">E-Posta :</label>
                            <div class="controls">
                                <input type="email" value="@Model.Uye.Eposta" name="Eposta" class="span4" placeholder="E-Posta Adresi Giriniz..." />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Kullanıcı Adı :</label>
                            <div class="controls">
                                <input value="@Model.Uye.KullaniciAdi" type="text" name="KullaniciAdi" class="span4" placeholder="Kullanıcı Adı Giriniz..." />
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Adres :</label>
                            <div class="controls">
                                <textarea name="Adres" class="span10">@Model.Personel.Adres</textarea>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="control-group">
                                <label class="control-label"></label>
                                <button type="submit" class="btn btn-success">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="~/Content/Dashboard/js/jquery.min.js"></script>
<script src="~/Content/Dashboard/js/jquery.ui.custom.js"></script>