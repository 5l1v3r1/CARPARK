@model CARPARK.DTO.EntitisModelViewDTO.AboneViewModel
@{
    ViewBag.Title = "SubscriberPaymentInvoice";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<style>
    #sub {
        margin-bottom: 0;
    }

</style>
<script type="text/javascript">
    function printlayer(Layer) {
        var generator = window.open("");
        var layertext = document.getElementById("printdiv");
        generator.document.write(layertext.innerHTML.replace("Print Me"))

        generator.document.close();
        generator.print();
        generator.close();
    }
</script>
<div id="content-header">
    <div id="breadcrumb">
        <a href="/Dashboard" title="Anasayfaya Geri Dön" class="tip-bottom"><i class="icon-home"></i> Anasayfa</a>
        <a href="/SubscriberList" title="Abone Sayfasına Geri Dön" class="tip-bottom"><i class="icon-user"></i> Aboneler</a>
        <a href="#" class="current">Abone Fatura</a>
    </div>
</div>

<div class="container-fluid" > 
    <hr id="sub">
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"> <i class="icon-briefcase"></i> </span>
                    <h5>Abone Fatura</h5>
                </div>
                <div class="widget-content" id="printdiv">
                    <div class="row-fluid">
                        <div class="span6" id="sirket">
                            <table class="">
                                <tbody>
                                    <tr>
                                        <td><h4>Parkur Otopark</h4></td>
                                    </tr>
                                    <tr>
                                        <td>Ahmet Turan ALP</td>
                                    </tr>
                                    <tr>
                                        <td>İstanbul \ Kurtuluş</td>
                                    </tr>
                                    <tr>
                                        <td>Telefon: 05367193657</td>
                                    </tr>
                                    <tr>
                                        <td>parkurotopark@gmail.com</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="span6">
                            <table class="table table-bordered table-invoice">
                                <tbody>
                                    <tr>
                                    <tr>
                                        <td class="width30">Fatura ID:</td>
                                        <td class="width70"><strong>PO-@Model.Odeme.OdemeID</strong></td>
                                    </tr>
                                    <tr>
                                        <td>Veriliş Tarihi:</td>
                                        <td><strong>@String.Format("{0:MM/dd/yyyy}", DateTime.Now)</strong></td>
                                    </tr>
                                    <tr>
                                        <td>Ödenen Ay:</td>
                                        <td><strong>@String.Format("{0:y}", DateTime.Now)</strong></td>
                                    </tr>
                                    <tr>
                                        <td class="width30">Abone Bilgileri</td>
                                        <td class="width70">
                                            <strong> Abone: @Model.Abone.Adi @Model.Abone.Soyad</strong> <br>
                                            Telefon: @Model.Abone.CepTel <br>
                                            E-Posta: @Model.Uye.Eposta <br>
                                        </td>
                                    </tr>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span12">
                            <table class="table table-bordered table-invoice-full">
                                <thead>
                                    <tr>
                                        <th>Ödeme ID</th>
                                        <th>Plaka</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Tutar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="text-align:center;">@Model.Odeme.AboneID</td>
                                        <td style="text-align:center;">@Model.Arac.Plaka</td>
                                        <td style="text-align:center;">@Model.Marka.Marka</td>
                                        <td style="text-align:center;">@Model.Model.Model</td>
                                        <td style="text-align:center;"><strong>@Model.Odeme.Tutar TL</strong></td>
                                    </tr>

                                </tbody>
                            </table><br /><br /><br />
                            <div class="row">
                                <div class="span6" style="text-align:center;">
                                    <h5>Personel Ad Soyad</h5>
                                    <h5> İmza</h5>
                                </div>
                                <div class="span6" style="text-align:center;">
                                    <h5>Abone Ad Soyad</h5>
                                    <h5> İmza</h5>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="pull-right">
                    <br />
                    <a class="btn btn-primary btn-large pull-right" id="print" onclick="javascript:printlayer('#printdiv')" href="#">Fatura Yazdır</a>
                </div>
            </div>
        </div>
    </div>
</div>
